@model System.Collections.Generic.List<CMS.Models.Sessional>
@{
    ViewBag.Title = "Gradebook";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

<head>
    <script src="~/jquery/jquery-2.1.4.min.js" type="text/javascript"></script>

    <script src="~/bootstrap-3.3.4-dist/js/bootstrap.min.js" type="text/javascript"></script>


    <link href="~/bootstrap-3.3.4-dist/css/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/bootstrap-3.3.4-dist/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" type="text/css" href="~/Content/style.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/Profile.css" />

    <meta name="viewport" content="width=device-width" />
    <title>File Manager</title>

</head>

<div class="row" style="padding-top:20px">
    <div class="col-lg-4">
        <legend>Add Activity</legend>
        <form action="~/Teacher/AddSessional" method="post">
            <input type="hidden" name="courseId" value="@ViewBag.CourseId" />
            <input type="hidden" name="teacherId" value="@ViewBag.TeacherId" />
            <input type="text" name="Title" placeholder="Title" class="form-control form-group" required />

            <input type="text" name="totalMarks" placeholder="Total Marks" class="form-control form-group" required />
            <input type="text" name="weightage" placeholder="Weightage" class="form-control form-group" required />

            <input type="submit" class="btn btn-primary" value="Add" />
        </form>
    </div>
</div>

<div class="row" style="padding-top:20px">
    <h2>Activities</h2>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    #
                </th>
                <th>
                    Title
                </th>
                <th>
                    Total Marks
                </th>
                <th>
                    Weightage
                </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @{int index = 1;}
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @index
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalMarks)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Weightage)
                    </td>

                    <td>
                        @Html.ActionLink("Detail", "SessionalDetail", new { sessionalId = item.Id }) |
                        @Html.ActionLink("Edit", "EditSessional", new { sessionalId = item.Id }) |
                        @Html.ActionLink("Delete", "DeleteSessional", new { sessionalId = item.Id }) 
                    </td>
                </tr>

                @(index++)
            }
        </tbody>
    </table>
</div>


@model CMS.Models.Sessional

@{
    ViewBag.Title = "EditSessional";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

<head>
    <script src="~/jquery/jquery-2.1.4.min.js" type="text/javascript"></script>

    <script src="~/bootstrap-3.3.4-dist/js/bootstrap.min.js" type="text/javascript"></script>


    <link href="~/bootstrap-3.3.4-dist/css/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/bootstrap-3.3.4-dist/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" type="text/css" href="~/Content/style.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/Profile.css" />

    <meta name="viewport" content="width=device-width" />
    <title>Edit Sessional</title>

</head>

@using (Html.BeginForm("UpdateSessional", "Teacher", FormMethod.Post)) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Sessional</legend>

        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.CourseId)
        @Html.HiddenFor(model => model.TeacherId)

        <div class="editor-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Weightage)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Weightage)
            @Html.ValidationMessageFor(model => model.Weightage)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TotalMarks)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TotalMarks)
            @Html.ValidationMessageFor(model => model.TotalMarks)
        </div>

        <p style="padding-top:10px">
            <input type="submit" value="Save" class="btn btn-success"/>
        </p>
    </fieldset>
}


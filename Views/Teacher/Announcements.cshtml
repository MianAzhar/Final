@{
    ViewBag.Title = "Announcements";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

@using CMS.Models
@model System.Collections.Generic.List<Announcement>

<head>
    <script src="~/jquery/jquery-2.1.4.min.js" type="text/javascript"></script>

    <script src="~/bootstrap-3.3.4-dist/js/bootstrap.min.js" type="text/javascript"></script>


    <link href="~/bootstrap-3.3.4-dist/css/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/bootstrap-3.3.4-dist/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" type="text/css" href="~/Content/style.css" />

    <meta name="viewport" content="width=device-width" />
    <title>Announcements</title>
</head>

<div class="row">
    @Html.ActionLink("Post Announcemet", "PostAnnouncement", new { courseId = ViewBag.courseId }, new{Class="btn btn-primary"})
</div>

<div class="row" style="padding-top:20px">
    

    <div class="col-lg-10">
        
        @foreach(Announcement an in Model)
        { 
        <div class="panel panel-default">
            <div class="panel-heading">
                @an.Title
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="alert alert-success">
                    @an.Message
                </div>
                
                
            </div>
            <!-- .panel-body -->
        </div>
        }
        <!-- /.panel -->
    </div>

</div>

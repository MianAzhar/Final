@model System.Collections.Generic.List<CMS.Models.Course>

@{
    ViewBag.Title = "TeacherDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<head>
    <script src="~/jquery/jquery-2.1.4.min.js" type="text/javascript"></script>

    <script src="~/bootstrap-3.3.4-dist/js/bootstrap.min.js" type="text/javascript"></script>


    <link href="~/bootstrap-3.3.4-dist/css/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/bootstrap-3.3.4-dist/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" type="text/css" href="~/Content/style.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/Profile.css" />

    <meta name="viewport" content="width=device-width" />
    <title>Students</title>

</head>

<div class="row">
    <table cellpadding="100">
        
        <tr style="padding-top:10px">
            <td><label>Name: </label></td>
            <td align="right"><input disabled id="id" type="text" value="@ViewBag.TeacherUser.Teacher.Name" /></td>
        </tr>
        <tr style="padding-top:10px">
            <td><label>Username: </label>  </td>
            <td align="right"><input disabled id="id" type="text" value="@ViewBag.TeacherUser.User.UserName" /></td>
        </tr>
        <tr style="padding-top:100px">
            <td><label>Password: </label></td>
            <td align="right"><input disabled id="id" type="text" value="@ViewBag.TeacherUser.User.Password" /></td>
        </tr>
    </table>
</div>

<div class="row">
    <h2>Courses</h2>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Code
                </th>
                <th>
                    Credit Hr.
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CrdeitHour)
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-primary pull-right" href="~/Admin/AddTeacherCourse?tid=@ViewBag.TeacherUser.Teacher.Id ">Assign Course</a>
</div>
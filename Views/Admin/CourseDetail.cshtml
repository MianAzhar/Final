@model System.Collections.Generic.List<CMS.Models.Teacher>

@{
    ViewBag.Title = "CourseDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<head>
    <script src="~/jquery/jquery-2.1.4.min.js" type="text/javascript"></script>

    <script src="~/bootstrap-3.3.4-dist/js/bootstrap.min.js" type="text/javascript"></script>


    <link href="~/bootstrap-3.3.4-dist/css/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/bootstrap-3.3.4-dist/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" type="text/css" href="~/Content/style.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/Profile.css" />

    <meta name="viewport" content="width=device-width" />
    <title>Students</title>

</head>

<div class="row">
    <table cellpadding="100">

        <tr style="padding-top:10px">
            <td><label>Title: </label></td>
            <td align="right"><input disabled id="id" type="text" value="@ViewBag.Course.Title" /></td>
        </tr>
        <tr style="padding-top:10px">
            <td><label>Code: </label>  </td>
            <td align="right"><input disabled id="id" type="text" value="@ViewBag.Course.Code" /></td>
        </tr>
        <tr style="padding-top:100px">
            <td><label>Credit Hr.: </label></td>
            <td align="right"><input disabled id="id" type="text" value="@ViewBag.Course.CrdeitHour" /></td>
        </tr>
    </table>
</div>

<div class="row">
    <h2>Courses</h2>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    Instructor Name
                </th>
                <th>
                    Scale
                </th>
                <th>
                    Type
                </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Scale)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
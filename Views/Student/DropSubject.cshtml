@{
    ViewBag.Title = "DropSubject";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

@using CMS.Models

@model System.Collections.Generic.List<Course>
<head>

    <link href="~/bootstrap-3.3.4-dist/css/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/bootstrap-3.3.4-dist/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" type="text/css" href="~/Content/style.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/Profile.css" />

    <meta name="viewport" content="width=device-width" />
    <title>Drop Subject</title>

    <script>
        function sendReques()
        {
            var courseId = $("#courseId").val();

            $.ajax({
                url: '/Student/RequestDropSubject',
                contentType: 'application/html; charset=utf-8',
                data: { courseId: courseId },
                type: 'GET',
                dataType: 'html'

            })
            .success(function (result) {
                $('#action').html(result);
            })
            .error(function (xhr, status) {
                alert(status);
            })
        }
    </script>

</head>

<div class="panel panel-primary">
    <div class="panel-heading">
        <div class="panel-title">
            Drop Subject
        </div>
    </div>
    <div class="panel-body">
        <form role="form">
            <div class="form-group form-inline">
                Select Subject: <select class="form-control" id="courseId">
                @foreach(Course t in Model)
                {
                    <option value="@t.Id">@t.Title</option>
                }
                    
                </select>
            </div>
            
            <input type="submit" class="btn btn-success" value="Drop Subject" onclick="sendReques()" />
        </form>
    </div>
    <div id="action" class="panel-footer">

    </div>
</div>


